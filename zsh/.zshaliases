# awesomewm specific
alias awcfg='$EDITOR ~/.config/awesome/rc.lua'
alias awthemecfg='$EDITOR ~/.config/awesome/mytheme.lua'
alias awautostartcfg='$EDITOR ~/.config/awesome/autostart.sh'

# compton specific
alias compcfg='$EDITOR ~/dotfiles/compton/.config/compton/compton.conf'

# zsh specific
alias szshrc='source ~/dotfiles/zsh/.zshrc'
alias zshcfg='$EDITOR ~/dotfiles/zsh/.zshrc'
alias zshalias='$EDITOR ~/dotfiles/zsh/.zshaliases'

# troubleshooting network
alias ping3='ping -c3 archlinux.org'

# i3 specific
alias i3cfg='$EDITOR ~/dotfiles/i3/.config/i3/config'

# polybar specific
alias polybarcfg='$EDITOR ~/dotfiles/polybar/.config/polybar/config'

# general console
alias ls="ls --color=auto"

# open dotfiles in VS Code
alias dotfiles="code $HOME/dotfiles"
