[colors]

background = #aa
background-alt = #222
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
charging = #00db00
charging-alt = #009000
discharging = #ff0000
discharging-alt = #8b0000

[bar/MainBar]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 30
radius = 2.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #f00

border-size = 1
border-color = #00000000

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = FuraCode Nerd Font:pixelsize=15;3

modules-left = i3 xwindow
;modules-center = 
modules-right = xbacklight memory cpu temperature battery date

tray-position = right
tray-background = ${colors.background}
tray-detached = false

;wm-restack = bspwm
wm-restack = i3
;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

